<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Page</title>
    <script src='https://cdn.jsdelivr.net/npm/fullcalendar@6.1.15/index.global.min.js'></script>
    <link href="https://cdn.jsdelivr.net/npm/flowbite@2.5.2/dist/flowbite.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet" />
</head>
<body class="bg-gray-50">
    <section class="h-screen flex items-center justify-center">
        <div class="container px-6 py-12 mx-auto">
            <div class="flex justify-center items-center">
                <!-- Left Column -->
                <div class="hidden md:block w-1/2">
                    <img src="https://tecdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.svg" alt="Phone image" class="w-full"/>
                </div>
                <!-- Right Column -->
                <div class="w-full md:w-1/3 bg-white p-8 rounded-lg shadow-lg">
                    <h2 class="text-3xl font-semibold text-center mb-6 text-gray-700">Admin Login</h2>
                    <form action="/admin" method="post">
                        <!-- Email Input -->
                        <div class="mb-4">
                            <label for="email" class="block text-gray-600">Email Address</label>
                            <input type="email" id="email" name="email" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" placeholder="Email address" required />
                        </div>

                        <!-- Password Input -->
                        <div class="mb-6">
                            <label for="password" class="block text-gray-600">Password</label>
                            <input type="password" id="password" name="password" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" placeholder="Password" required />
                        </div>

                        <!-- Remember me Checkbox -->
                        <div class="flex items-center mb-4">
                            <input type="checkbox" id="rememberMe" class="w-4 h-4 text-blue-600 border-gray-300 rounded focus:ring-blue-500" />
                            <label for="rememberMe" class="ml-2 text-gray-600">Remember me</label>
                        </div>

                        <!-- Forgot Password Link -->
                        <div class="flex justify-between items-center mb-6">
                            <a href="#" class="text-blue-600 hover:underline">Forgot password?</a>
                        </div>

                        <!-- Submit Button -->
                        <button type="submit" class="w-full px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500">Sign in</button>

                        <!-- <div class="my-6 flex items-center text-gray-500">
                            <span class="flex-1 border-t border-gray-300"></span>
                            <span class="mx-4">OR</span>
                            <span class="flex-1 border-t border-gray-300"></span>
                        </div>

                        <a href="#" class="w-full inline-block mb-4 px-4 py-2 text-white bg-blue-600 text-center rounded-lg hover:bg-blue-700">
                            Continue with Facebook
                        </a>
                        <a href="#" class="w-full inline-block mb-4 px-4 py-2 text-white bg-blue-400 text-center rounded-lg hover:bg-blue-500">
                            Continue with Twitter
                        </a> -->
                    </form>
                </div>
            </div>
        </div>
    </section>
</body>
</html>
